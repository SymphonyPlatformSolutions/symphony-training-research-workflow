id: research-workflow

variables:
  approvalRoomId: vejDKVdkDOwkhI85VgLku3///oKu0qZFdA==

activities:
  - send-message:
      id: authoringForm
      on:
        message-received:
          content: /research
      content:
        <form id="authoringForm">
        <h2>Research Authoring Form</h2>
        <text-field name="ticker" placeholder="Please enter the Stock Ticker here"></text-field>
        <textarea name="content" placeholder="Please enter your Research Content here and then Submit form."></textarea>
        <button name="submit">Submit</button>
        </form>
  
  - pin-message:
      id: pinAuthorForm
      message-id: ${authoringForm.outputs.msgId}

  - send-message:
      id: approvalForm
      to:
        stream-id: ${variables.approvalRoomId}
      content:
        <form id="approvalForm">
        <h2>Research Approval Form</h2>
        <hr/>
        <textarea name="approvalContent" label="Research Content">You will see the Research Content for Approval here.</textarea>
        <hr/>
        <button name="approve" type="action">Approve</button>
        <button name="reject" type="action">Reject</button>
        </form>
